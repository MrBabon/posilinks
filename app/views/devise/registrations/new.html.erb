<h2>S'inscrire</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>
<div class="center-form">
  <div class="form-inputs">
    <%= f.input :nickname,
                required: true,
                autofocus: true,
                label: "Nom d'utilisateur" %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: "Email" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} charactÃ¨res minimum" if @minimum_password_length),
                label: "Nouveau mot de passe" %>
    <%= f.input :password_confirmation,
                required: true,
                label: "Confirmation de mot de passe" %>
  </div>

  <div class="form-actions button-registration">
    <%= f.button :submit, "S'inscrire", class: "btn btn-primary button-registration-submit" %>
    <%= link_to "Se connecter", new_session_path(resource_name)  %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
