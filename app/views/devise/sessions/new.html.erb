<h2>Connexion</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
<div class="center-form">
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: "Email" %>
    <%= f.input :password,
                required: false,
                label: "Mot de passe actuel" %>
    <%= f.input :remember_me, label: "Rester connectÃ©", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions button-registration">
    <%= f.button :submit, "Connexion", class: "btn btn-primary button-registration-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
